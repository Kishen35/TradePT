{
  "manifest_version": 3,
  "name": "Deriv AI Trading Tutor",
  "version": "1.0",
  "description": "Personalized AI agent for trading education on Deriv DTrader.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://your-backend-domain.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://app.deriv.com/*"],
      "js": ["ai-integration.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "./index.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "trading_edu.html",
        "trading-styles.css",
        "favicon.png",
        "pocketpt-tab.css",
        "icon.png",
        "views/*",
        "js/*"
      ],
      "matches": ["https://app.deriv.com/*"]
    }
  ]
}
